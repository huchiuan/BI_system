<% layout('layouts/login_boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5 logincard ">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://upload.wikimedia.org/wikipedia/en/thumb/6/63/Tsmc.svg/1200px-Tsmc.svg.png"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">登入</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">帳號</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                               沒問題。
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">密碼</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                沒問題。
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                        <button class="btn  btn-secondary ">登入</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>